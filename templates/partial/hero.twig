<section id="hero" class="hero-img relative bg-center bg-cover bg-fixed md:bg-top" style="background-image: url({{post.get_field('hero_image')}});">
    <div class="absolute bg-black w-full h-full hero-cover z-0"></div>
    <div class="invisible md:visible z-20 relative flex justify-end p-4 container mx-auto lg:text-xl">
        <a class="pr-2 flex items-center lg:pr-3" href="{{options.facebook}}" target="_blank">
            <svg class="h-6 w-6 fill-current text-primary hover:text-secondary"xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/></svg>
        </a>
        <p class="text-white flex items-center">Call us at: <a class="font-black text-white no-underline align-middle pl-2 hover:text-primary lg:pl-3" href="tel:{{options.phone}}">
            <svg class="h-5 w-5 align-middle feather feather-phone" mlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            <span class="align-middle">{{options.phone}}</span></a>
        </p>
    </div>
    <div class="flex items-center justify-center container mx-auto">
        <div class="text-center z-10 text-white pb-6 md:py-24 md:py-32 xl:py-64">
            <h1 class="uppercase font-black text-4xl tracking-in-expand md:opacity-0 md:text-6xl tracking-xwide lg:text-7xl xl:text-8xl">{{post.get_field('hero_title')}}</h1>
            <h2 class="text-xl pt-1 font-normal fade-in md:opacity-0 md:text-2xl lg:text-3xl xl:text-4xl">{{post.get_field('hero_headline')}}</h2>
        </div>
    </div>

    <div id="hero-menu" class="invisible md:visible relative">
        <div class="absolute bg-primary w-full h-full opacity-25"></div>
		<div class="flex justify-end p-4 z-10 relative container mx-auto lg:text-xl">
            {% for item in menu.items %}
            <a href="{{ item.link }}" class="scroll block text-white hover:text-primary font-bold no-underline pl-3 md:pl-6 lg:pl-10">
                {{ item.title }}
            </a>
            {% endfor %}
		</div>
	</div>

</section>